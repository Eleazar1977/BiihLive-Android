const {onCall, onRequest, HttpsError} = require('firebase-functions/v2/https');
const {onDocumentCreated} = require('firebase-functions/v2/firestore');
const {initializeApp} = require('firebase-admin/app');
const {getFirestore, FieldValue} = require('firebase-admin/firestore');
const {getAuth} = require('firebase-admin/auth');
const nodemailer = require('nodemailer');
const functions = require('firebase-functions');

initializeApp();

// Configurar AWS SES desde functions.config()
const config = functions.config();
const AWS_SES_HOST = config.aws_ses?.smtp_host || 'email-smtp.eu-west-1.amazonaws.com';
const AWS_SES_PORT = parseInt(config.aws_ses?.smtp_port || '587');
const AWS_SES_USER = config.aws_ses?.smtp_user;
const AWS_SES_PASSWORD = config.aws_ses?.smtp_password;
const AWS_SES_FROM_EMAIL = config.aws_ses?.from_email || 'noreply@biihlive.com';

// Crear transporter AWS SES
let transporter = null;
if (AWS_SES_USER && AWS_SES_PASSWORD) {
  transporter = nodemailer.createTransport({
    host: AWS_SES_HOST,
    port: AWS_SES_PORT,
    secure: false,
    auth: {
      user: AWS_SES_USER,
      pass: AWS_SES_PASSWORD
    }
  });
  console.log('AWS SES transporter configurado correctamente');
} else {
  console.warn('AWS SES credentials no configuradas');
}

// Configuraci√≥n
const EMAIL_CONFIG = {
  FROM_EMAIL: 'noreply@biihlive.com',
  FROM_NAME: 'BiihLive',
  CODE_EXPIRY_MINUTES: 10,
  MAX_ATTEMPTS: 3
};

/**
 * Generar c√≥digo de verificaci√≥n de 6 d√≠gitos
 */
function generateVerificationCode() {
  return Math.floor(100000 + Math.random() * 900000).toString();
}

/**
 * Obtener template HTML para el email
 */
function getEmailTemplate(code, userName) {
  return `
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
